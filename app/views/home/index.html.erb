<% if current_user %>
    <h1>Welcome <%= current_user.email %></h1>
<% else %>
  <h1>Welcome Guest<h1>
<% end %>

<a href="./users/sign_up">Sign Up</a>
<a href="./users/sign_in">Sign In</a>
<%= link_to "Sign Out", destroy_user_session_path, "method" => :delete if current_user%>

<%= flash[:notice] if flash[:notice] %>
